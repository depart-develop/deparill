<span class="js-count correctCount" data-count="" transition:persist transition:name="count"></span>
<style>
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>

<script>
	const answerCheck = () => {
		const answers = document.querySelectorAll('.js-answer');
		const guideArea = document.querySelector('.js-question');
		answers.forEach((item) => {
			item.addEventListener('click', () => {
				const target:any = document.querySelector('.js-count');

				if(guideArea) {
				if(item.getAttribute('data-current')) {
						guideArea.classList.add('is-correct')
						target.textContent =  Number(target.getAttribute('data-count')) + 1;
						target.setAttribute('data-count', Number(target.getAttribute('data-count')) + 1);
					} else {
						guideArea.classList.add('is-incorrect')
					}
				}
				answers.forEach((item) => {
					(item as HTMLButtonElement).disabled = true;
				})
			});
		});
	}
	document.addEventListener('astro:page-load', () => {
		answerCheck()
	});
</script>